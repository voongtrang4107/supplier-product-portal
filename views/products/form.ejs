<%- include('../layout', { body: `
  <h1>${product && product._id ? 'Edit' : 'Create'} Product</h1>
  <form method="post" action="${product && product._id ? '/products/' + product._id + '/edit' : '/products/create'}">
    <input name="name" placeholder="Name" value="${product.name || ''}" required />
    <input name="price" type="number" step="0.01" placeholder="Price" value="${product.price || 0}" required />
    <input name="qty" type="number" placeholder="Qty" value="${product.qty || 0}" required />
    <select name="supplier" required>
      <option value="">-- Choose supplier --</option>
      ${suppliers.map(s => `
        <option value="${s._id}" ${product?.supplier && String(product.supplier)===String(s._id) ? 'selected' : ''}>${s.name}</option>
      `).join('')}
    </select>
    <button>Save</button>
  </form>
` }) %>