<%- include('../layout', { body: `
  <h1>Suppliers</h1>
  <a href="/suppliers/create">+ New Supplier</a>
  <table>
    <thead><tr><th>Name</th><th>Address</th><th>Phone</th><th>Actions</th></tr></thead>
    <tbody>
      ${suppliers.map(s => `
        <tr>
          <td>${s.name}</td>
          <td>${s.address}</td>
          <td>${s.phone}</td>
          <td>
            <a href="/suppliers/${s._id}/edit">Edit</a>
            <form method="post" action="/suppliers/${s._id}/delete" style="display:inline">
              <button onclick="return confirm('Delete?')">Delete</button>
            </form>
          </td>
        </tr>
      `).join('')}
    </tbody>
  </table>
` }) %>